# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database Configuration
# PostgreSQL for user data
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=okada_auth
POSTGRES_USER=okada_user
POSTGRES_PASSWORD=your_postgres_password

# MongoDB for sessions and logs
MONGODB_URI=mongodb://localhost:27017/okada_auth

# Redis for caching and rate limiting
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_min_64_chars_for_security_purposes
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your_super_secret_refresh_jwt_key_here_min_64_chars_for_security
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (SendGrid or SMTP)
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@okada.cm
EMAIL_FROM_NAME=Okada Platform

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Security Configuration
BCRYPT_ROUNDS=12
OTP_EXPIRY_MINUTES=10
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=30
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cameroon Specific
DEFAULT_COUNTRY_CODE=+237
SUPPORTED_LOCALES=en,fr
DEFAULT_LOCALE=fr
CURRENCY=XAF

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here
METRICS_ENABLED=true