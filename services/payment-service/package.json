{
  "name": "@okada/payment-service",
  "version": "1.0.0",
  "description": "Okada Platform Payment Service - Production-ready payment integrations for Cameroon",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "db:migrate": "ts-node src/database/migrations/run.ts",
    "db:seed": "ts-node src/database/seeds/run.ts",
    "start:prod": "pm2 start ecosystem.config.js --env production",
    "stop:prod": "pm2 stop ecosystem.config.js",
    "logs": "pm2 logs payment-service"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "dotenv": "^16.3.1",
    "winston": "^3.10.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "redis": "^4.6.7",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3",
    "mongoose": "^7.4.3",
    "uuid": "^9.0.0",
    "joi": "^17.9.2",
    "axios": "^1.4.0",
    "crypto": "^1.0.1",
    "twilio": "^4.14.0",
    "nodemailer": "^6.9.4",
    "node-cron": "^3.0.2",
    "express-async-errors": "^3.1.1",
    "compression": "^1.7.4",
    "express-mongo-sanitize": "^2.2.0",
    "express-slow-down": "^1.6.0",
    "hpp": "^0.2.3",
    "bull": "^4.11.3",
    "bull-board": "^2.1.3",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "lodash": "^4.17.21",
    "decimal.js": "^10.4.3",
    "xml2js": "^0.6.2",
    "aes-js": "^3.1.2",
    "form-data": "^4.0.0",
    "qs": "^6.11.2",
    "retry": "^0.13.1",
    "node-fetch": "^3.3.2",
    "crypto-js": "^4.1.1",
    "jsonwebtoken": "^9.0.2",
    "express-http-context": "^1.2.4",
    "correlator": "^3.0.1",
    "promisify": "^0.0.3",
    "pdfkit": "^0.13.0",
    "excel4node": "^1.8.2",
    "csv-parser": "^3.0.0",
    "fast-csv": "^4.3.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.5.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/uuid": "^9.0.2",
    "@types/nodemailer": "^6.4.9",
    "@types/node-cron": "^3.0.8",
    "@types/compression": "^1.7.2",
    "@types/hpp": "^0.2.2",
    "@types/lodash": "^4.14.195",
    "@types/xml2js": "^0.4.11",
    "@types/qs": "^6.9.7",
    "@types/retry": "^0.12.2",
    "@types/crypto-js": "^4.1.1",
    "@types/pdfkit": "^0.12.9",
    "@types/jest": "^29.5.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "mongodb-memory-server": "^8.15.1",
    "redis-memory-server": "^0.8.0",
    "nock": "^13.3.2",
    "sinon": "^15.2.0",
    "@types/sinon": "^10.0.16",
    "faker": "^6.6.6",
    "@types/faker": "^6.6.9",
    "pm2": "^5.3.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/*.test.ts",
      "!src/**/*.spec.ts",
      "!src/index.ts",
      "!src/database/migrations/**",
      "!src/database/seeds/**",
      "!src/config/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 98,
        "functions": 98,
        "lines": 98,
        "statements": 98
      }
    },
    "setupFilesAfterEnv": ["<rootDir>/src/tests/setup.ts"],
    "testTimeout": 30000,
    "clearMocks": true,
    "resetMocks": true,
    "restoreMocks": true
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "okada",
    "payment",
    "mtn-mobile-money",
    "orange-money",
    "cameroon",
    "fintech",
    "xaf",
    "ussd",
    "cemac"
  ],
  "author": "Okada Platform Team",
  "license": "UNLICENSED",
  "private": true
}