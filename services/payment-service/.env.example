# Payment Service Environment Variables

# Server Configuration
PORT=3005
NODE_ENV=development
LOG_LEVEL=debug
SERVICE_NAME=payment-service

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/okada_payments
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
MONGODB_URL=mongodb://localhost:27017/okada_payments

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# MTN Mobile Money Configuration
MTN_API_BASE_URL=https://sandbox.momodeveloper.mtn.com
MTN_API_USER_ID=your-mtn-api-user-id
MTN_API_KEY=your-mtn-api-key
MTN_PRIMARY_KEY=your-mtn-primary-key
MTN_SECONDARY_KEY=your-mtn-secondary-key
MTN_COLLECTION_SUBSCRIPTION_KEY=your-mtn-collection-subscription-key
MTN_DISBURSEMENT_SUBSCRIPTION_KEY=your-mtn-disbursement-subscription-key
MTN_REMITTANCE_SUBSCRIPTION_KEY=your-mtn-remittance-subscription-key
MTN_CALLBACK_URL=https://your-domain.com/api/payments/mtn/callback
MTN_WEBHOOK_SECRET=your-mtn-webhook-secret

# Orange Money Configuration
ORANGE_API_BASE_URL=https://api.orange.com/orange-money-webpay/cm/v1
ORANGE_MERCHANT_KEY=your-orange-merchant-key
ORANGE_CLIENT_ID=your-orange-client-id
ORANGE_CLIENT_SECRET=your-orange-client-secret
ORANGE_CALLBACK_URL=https://your-domain.com/api/payments/orange/callback
ORANGE_CANCEL_URL=https://your-domain.com/api/payments/orange/cancel
ORANGE_NOTIF_URL=https://your-domain.com/api/payments/orange/notification
ORANGE_WEBHOOK_SECRET=your-orange-webhook-secret

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
FROM_EMAIL=noreply@okada.cm
FROM_NAME=Okada Platform

# Encryption
ENCRYPTION_KEY=your-32-char-encryption-key-here
HASH_SALT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Fraud Detection
FRAUD_DETECTION_ENABLED=true
MAX_DAILY_TRANSACTION_AMOUNT=5000000
MAX_SINGLE_TRANSACTION_AMOUNT=1000000
SUSPICIOUS_VELOCITY_THRESHOLD=10
RISK_SCORE_THRESHOLD=75

# Payment Settings
DEFAULT_CURRENCY=XAF
TRANSACTION_TIMEOUT_MS=300000
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=5000

# Cameroon-Specific Settings
CEMAC_COMPLIANCE_ENABLED=true
TAX_RATE_PERCENT=19.25
COMMISSION_RATE_PERCENT=2.5
SETTLEMENT_DELAY_HOURS=24

# Monitoring & Observability
ENABLE_METRICS=true
ENABLE_TRACING=true
SENTRY_DSN=your-sentry-dsn

# External Services
AUDIT_SERVICE_URL=http://localhost:3007
NOTIFICATION_SERVICE_URL=http://localhost:3006
USER_SERVICE_URL=http://localhost:3002
ORDER_SERVICE_URL=http://localhost:3004

# Queue Configuration
BULL_REDIS_URL=redis://localhost:6379
QUEUE_CONCURRENCY=5
QUEUE_DELAY_MS=1000

# File Storage
REPORTS_STORAGE_PATH=/tmp/okada/reports
MAX_REPORT_SIZE_MB=10

# Health Check
HEALTH_CHECK_TIMEOUT_MS=5000
HEALTH_CHECK_INTERVAL_MS=30000